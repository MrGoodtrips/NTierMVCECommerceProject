@model CategoryVM
@{
    ViewBag.Title = "AddCategory";
}

<style>
    .genislik{
        width : 300px;
    }
</style>

<style>
    .field-validation-error {
        color: red;
    }
</style>

@using (Html.BeginForm())
            {
                <div class="row">
                    <div class="col-sm-12">

                        <section class="panel">

                            <header class="panel-heading">
                                Kategori Ekleme Sayfası
                            </header>

                            <div class="panel-body">

                                <div class="form-group">

                                    <label class="col-sm-2"> Kategori İsmi </label>
                                    <div class="col-sm-10">

                                        @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control genislik", placeholder = "Kategori İsmi" })

                                        @Html.ValidationMessageFor(x => x.Category.CategoryName)

                                    </div>

                                    <br /> <br />

                                    <label class="col-sm-2"> Açıklama </label>
                                    <div class="col-sm-10">

                                        @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control genislik", placeholder = "Açıklama" })

                                        @Html.ValidationMessageFor(x => x.Category.Description)

                                    </div>

                                    <br /> <br />

                                    <label class="col-sm-2">  </label>
                                    <div class="col-sm-10">

                                        <button class="btn btn-primary genislik" > Ekle</button>

                                    </div>

                                </div>

                            </div>

                        </section>

                    </div>
                </div>
            }

