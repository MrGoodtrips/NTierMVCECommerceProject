@model ProductVM
@{
    ViewBag.Title = "ProductList";
}

<!-- page start-->
<section class="panel">
    <header class="panel-heading">
        @Html.ActionLink("List All Categories", "GetAllCategories")
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>ProductID</th>
                        <th>Ürün İsmi</th>
                        <th class="hidden-phone">Birim Fiyat</th>
                        <th class="hidden-phone">Stokatki Ürün Sayısı</th>
                        <th class="hidden-phone">Kategori</th>
                        <th class="hidden-phone">Resim</th>
                        <th class="hidden-phone">Veri Durumu</th>
                        <th class="hidden-phone">Güncelle</th>
                        <th class="hidden-phone">Sil</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (Product item in Model.Products)
                    {
                        <tr class="gradeX">

                            <td>@item.ID</td>
                            <td>@item.ProductName</td>
                            <td class="hidden-phone">@item.UnitPrice</td>
                            <td class="hidden-phone">@item.UnitsInStock</td>

                            @if (item.Category == null)
                            {
                                <td class="hidden-phone"> Kategorisi yok </td>
                            }
                            else
                            {
                                <td class="hidden-phone">@item.Category.CategoryName</td>
                            }

                            <td class="hidden-phone"> <img width="30" height="30" src="@item.ImagePath" alt="@item.ProductName" /> </td>
                            <td class="center hidden-phone">@item.Status</td>
                            <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateProduct", new { id = item.ID }, new { @class = "btn btn-warning" })</td>
                            <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteProduct", new { id = item.ID }, new { @class = "btn btn-danger" })</td>

                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</section>
<!-- page end-->
<script src="~/Areas/Admin/AdminScripts/AdminProductDTJ.js"></script>