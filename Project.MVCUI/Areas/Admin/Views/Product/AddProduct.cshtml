@model ProductVM
@{
    ViewBag.Title = "AddProduct";
}

<style>
    .genislik {
        width: 300px;
    }
</style>

<style>
    .field-validation-error {
        color: red;
    }
</style>

@using (Html.BeginForm("AddProduct","Product",FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    <div class="row">
        <div class="col-sm-12">

            <section class="panel">

                <header class="panel-heading">
                    Ürün Ekleme Sayfası
                </header>

                <div class="panel-body">

                    <div class="form-group">

                        <label class="col-sm-2"> Ürün İsmi </label>
                        <div class="col-sm-10">

                            @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control genislik", placeholder = "Ürün İsmi" })

                            @Html.ValidationMessageFor(x => x.Product.ProductName)

                        </div>

                        <br /> <br />

                        <label class="col-sm-2"> Birim Fiyat </label>
                        <div class="col-sm-10">

                            @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form-control genislik", placeholder = "Birim Fiyat" })

                            @Html.ValidationMessageFor(x => x.Product.UnitPrice)

                        </div>

                        <br /> <br />

                        <label class="col-sm-2"> Stoktaki Ürün Sayısı </label>
                        <div class="col-sm-10">

                            @Html.TextBoxFor(x => x.Product.UnitsInStock, new { @class = "form-control genislik", placeholder = "Stoktatki Ürün Sayısı" })

                            @Html.ValidationMessageFor(x => x.Product.UnitsInStock)

                        </div>

                        <br /> <br />

                        <label class="col-sm-2"> Kategori </label>
                        <div class="col-sm-10">

                            @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), "Lütfen Seçiniz", new { @class = "form-control genislik" })

                        </div>

                        <br /> <br />

                        <label class="col-sm-2"> Resim Seçiniz </label>
                        <div class="col-sm-10">

                            <input type="file" name="image" class="form-control genislik" />

                        </div>

                        <br /> <br />

                        <label class="col-sm-2">  </label>
                        <div class="col-sm-10">

                            <button class="btn btn-primary genislik"> Ekle</button>

                        </div>

                    </div>

                </div>

            </section>

        </div>
    </div>
}

